<div class="edit-container">
  <h2 class="edit-title">アカウント情報の変更</h2>

  <p class="edit-description">
    アカウント情報を変更するには、<strong>現在のパスワード</strong>の入力が必要です。
  </p>

  <% if flash[:notice] %>
    <div class="flash-message"><%= flash[:notice] %></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <h3 class="section-heading">基本情報</h3>

    <div class="edit-form-group">
      <%= f.label :nickname, "アカウント名（ニックネーム）" %>
      <%= f.text_field :nickname, placeholder: "例）たすけ太郎" %>
    </div>

    <div class="edit-form-group">
      <%= f.label :profile, "自己紹介（任意）" %>
      <%= f.text_area :profile, rows: 5, placeholder: "趣味や一言メッセージなど" %>
    </div>

    <div class="edit-form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例）example@example.com" %>
    </div>

    <h3 class="section-heading">パスワード変更</h3>

    <div class="edit-form-group">
      <%= f.label :password, "新しいパスワード（変更する場合のみ）" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角6文字以上" %>
    </div>

    <div class="edit-form-group">
      <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="edit-form-group">
      <%= f.label :current_password, "現在のパスワード（必須）" %>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true, placeholder: "変更の確認のために入力してください" %>
    </div>

    <div class="edit-buttons">
      <%= link_to "戻る", user_path(current_user), class: "btn-back" %>
      <%= f.submit "更新する", class: "btn-update" %>
    </div>
  <% end %>
</div>
